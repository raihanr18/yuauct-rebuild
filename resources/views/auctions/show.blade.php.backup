    window.Echo.channel('auction.{{ $auction->id }}')
        .listen('.bid.placed', (e) => {
            // Update current bid display
            const currentBidElement = document.querySelector('[x-data*="currentBid"]');
            if (currentBidElement) {
                Alpine.store('auction', {
                    currentBid: e.auction.formatted_current_bid
                });
            }
            
            // Add new bid to history (could implement this for better UX)
            console.log('New bid placed:', e);
            
            // Show notification
            showNotification('Penawaran baru: ' + e.bid.formatted_bid_amount + ' oleh ' + e.bid.user_name);
        });

    // Prevent rapid form submission
    const bidButtonElement = document.getElementById('bidButton');
    if (bidButtonElement) {
        bidButtonElement.addEventListener('click', function() {
            this.disabled = true;
            this.textContent = 'Processing...';
            setTimeout(() => {
                this.disabled = false;
                this.innerHTML = '<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path></svg><span>Ajukan Penawaran</span>';
            }, 2000);
        });
    }

